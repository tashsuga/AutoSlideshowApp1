    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
             android:layout_below="@id/pause_button"
            android:gravity="center">


        <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="次の画像"
                android:id="@+id/start_button"/>

        <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="一時停止"
                android:id="@+id/pause_button"/>

        <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="リセット"
                android:id="@+id/reset_button"/>
    </LinearLayout>
    <ImageView
            android:layout_width="347dp"
            android:layout_height="389dp" tools:srcCompat="@tools:sample/avatars"
            android:layout_alignParentBottom="true" android:id="@+id/imageView"
            android:layout_marginBottom="8dp" android:layout_alignParentStart="true"
            android:layout_marginStart="14dp" android:layout_marginTop="98dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="7dp" android:layout_alignParentTop="true"/>
</RelativeLayout>
